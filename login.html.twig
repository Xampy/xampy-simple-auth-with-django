{% extends 'base.html.twig' %}

{% load static %}


{% block stylesheets %}
	<link rel="stylesheet" href="{% static 'css/publications/publication.css' %}">
{% endblock %}

{% block rightContainer %}
{% endblock %}


{% block centerContainer %}
	<div class="container-fluid">
		<div class="row mt-5">
			<div class="col-md-6 mx-auto mt-5">
				<div class="text-center">
					 <p>
					 	{{ erros }}
					 </p>
				</div>
				<div class="text-center">
					 <h1>Se connecter</h1>
				</div>
				 

				 <div style="margin-top: 50px;">
				 	<form class="form"  method="POST">
				 		{% csrf_token %}
				 		<div class="form-group">
				 			<label>Nom</label>
				 			<input type="text" name="lastname" class="form-control mt-1">
				 		</div>
				 		<div class="form-group">
				 			<label>Prenom</label>
				 			<input type="text" name="firstname" class="form-control mt-1">
				 		</div>
				 		<div class="form-group mt-3">
				 			<label>Mot de passe</label>
				 			<input type="text" name="password" class="form-control mt-1">
				 		</div>

				 		<div class="form-group mt-3">
				 			<button class="btn btn-success w-100" >Connexion</button>
				 		</div>
				 	</form>
				 </div>
			</div>
		</div>
	</div>
	
{% endblock %}


{% block leftContainer %}
{% endblock %}

